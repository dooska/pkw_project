<p id="notice"><%= notice %></p>

<h1> Lista komitetów </h1>

<table>
	<thead>
		<tr>
			<th> Nazwa komitetu </th>
			<th colspan = "3"></th>
		</tr>
	</thead>

	<tbody>
		<% @committees.each do |committee| %>
		<tr>
			<td><%= committee.name %></td>
			<td><%=link_to 'Pokaż', committee %></td>
			<td><%=link_to 'Edytuj', edit_committee_path(committee)%></td>
			<td><%=link_to 'Usuń', committee, method: :delete, data: {confirm: "Czy jesteś pewien?"} %></td>
		</tr>
		<%end %>
	</tbody>
</table>
<br>

<%= link_to 'Dodaj komitet', new_committee_path %>
